{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "exactOptionalPropertyTypes": false,
    "allowUnreachableCode": false,
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}